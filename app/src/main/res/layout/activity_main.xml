<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="greendustbd.leasure.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:elevation="5dp"
        android:weightSum="2"
        android:background="@color/material_skyblue_500"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:elevation="8dp"
            android:background="#31f5e5"
            android:weightSum="2">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:background="@color/main_color_grey_100"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2.5dp"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                <greendustbd.leasure.font.RobotoTextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="45sp"
                    android:text="মুভি"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true" />

                <greendustbd.leasure.MaterialRippleLayout
                    style="@style/RippleStyle_mv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="16dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_movie"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                </greendustbd.leasure.MaterialRippleLayout>


            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayoutbk"
                android:background="@color/main_color_grey_100"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="5dp"
                android:elevation="8dp"
                android:layout_marginBottom="2.5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                <greendustbd.leasure.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textSize="45sp"
                    android:gravity="center"
                    android:text="বই"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true" />

                <greendustbd.leasure.MaterialRippleLayout
                    style="@style/RippleStyle_bk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="16dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_book" />

                </greendustbd.leasure.MaterialRippleLayout>




            </RelativeLayout>










        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31f5e5"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:elevation="8dp"
            android:weightSum="2">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayoutd"
                android:background="@color/main_color_grey_100"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <greendustbd.leasure.MaterialRippleLayout
                    style="@style/RippleStyle_dr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/dr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="16dp"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_masks"/>
                </greendustbd.leasure.MaterialRippleLayout>

                <greendustbd.leasure.font.RobotoTextView
                    android:id="@+id/myImageViewTextd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textSize="45sp"
                    android:text="নাটক"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayoutmu"
                android:background="@color/main_color_grey_100"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="5dp"
                android:elevation="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <greendustbd.leasure.font.RobotoTextView
                    android:id="@+id/mut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:gravity="bottom"
                    android:textSize="45sp"
                    android:text="গান"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"/>

                <greendustbd.leasure.MaterialRippleLayout
                    style="@style/RippleStyle_mu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="16dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_music"/>
                </greendustbd.leasure.MaterialRippleLayout>



            </RelativeLayout>






        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
